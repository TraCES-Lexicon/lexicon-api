{
  "swagger" : "2.0",
  "info" : {
    "description" : "An API that allows users to return accumulated results from different resources from their queries.\n## **NOTE** SNAPSHOT, Do not implement!\n## **NOTE** Will be superseded by https://swaggerhub.com/apis/sdruskat/traces-lexicon-api\n## NOTE TEST\n",
    "version" : "0.9.1",
    "title" : "Swagger 2.0 version of TraCES Ge'ez Lexicon API (unstable)",
    "contact" : {
      "name" : "Stephan Druskat",
      "url" : "http://sdruskat.net"
    },
    "license" : {
      "name" : "License: tba"
    }
  },
  "host" : "dev.sdruskat.net",
  "basePath" : "/lexicon/0.9.0",
  "schemes" : [ "https" ],
  "paths" : {
    "/query" : {
      "get" : {
        "summary" : "queries the API",
        "description" : "Query the API to return an accumulated result",
        "parameters" : [ {
          "name" : "string",
          "in" : "query",
          "description" : "The query string",
          "required" : true,
          "type" : "string"
        }, {
          "name" : "translit",
          "in" : "query",
          "description" : "Whether the query string is a transliteration (true) or a Fidal string (false, default)",
          "required" : false,
          "type" : "boolean",
          "default" : false
        } ],
        "responses" : {
          "202" : {
            "description" : "Accepted query"
          },
          "400" : {
            "description" : "bad input parameter"
          }
        }
      }
    },
    "/queue/{uuid}" : {
      "get" : {
        "summary" : "Returns queued query items",
        "description" : "Provides access to the queue of query items",
        "parameters" : [ {
          "name" : "uuid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "204" : {
            "description" : "No content. Query is still processing."
          },
          "303" : {
            "description" : "Query finished, see result URI."
          },
          "400" : {
            "description" : "Illegal query UUID"
          },
          "404" : {
            "description" : "Query with this UUID not found in queue."
          },
          "410" : {
            "description" : "Query is not queued anymore."
          }
        }
      }
    },
    "/results/{uuid}" : {
      "get" : {
        "summary" : "Returns a result",
        "description" : "Provides access to the finished result objects",
        "produces" : [ "application/json", "application/xml" ],
        "parameters" : [ {
          "name" : "uuid",
          "in" : "path",
          "required" : true,
          "type" : "string"
        } ],
        "responses" : {
          "200" : {
            "description" : "Success",
            "schema" : {
              "$ref" : "#/definitions/result"
            }
          },
          "400" : {
            "description" : "Illegal result UUID"
          },
          "404" : {
            "description" : "Result with UUID cannot be found."
          },
          "410" : {
            "description" : "Result is not available anymore."
          }
        }
      }
    }
  },
  "definitions" : {
    "result" : {
      "type" : "object",
      "properties" : {
        "query" : {
          "type" : "string",
          "example" : "በስመ፡"
        },
        "fidal" : {
          "type" : "string",
          "example" : "በስመ፡"
        },
        "transliteration" : {
          "type" : "string",
          "example" : "ba-sǝma"
        },
        "uuid" : {
          "type" : "string",
          "example" : "Cf. https://docs.oracle.com/javase/8/docs/api/java/util/UUID.html"
        }
      },
      "example" : {
        "fidal" : "በስመ፡",
        "query" : "በስመ፡",
        "uuid" : "Cf. https://docs.oracle.com/javase/8/docs/api/java/util/UUID.html",
        "transliteration" : "ba-sǝma"
      }
    }
  }
}